<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :resume %>
    <%= form.text_field :resume %>

  </div>

  <div class="field">
    <%= form.label :_type %>
    <%= form.select :_type, @type_options %>
  </div>

  <div class="field">
    <%= form.label :publication %>
    <%= form.date_field :publication %>
  </div>

  <div class="field">
    <%= form.label :publisher %>
    <%= collection_select(:book, :publisher_id, Publisher.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :autor %>
    <%= collection_select(:book, :autor_id, Autor.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :cover %>
    <%= form.check_box :cover %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
